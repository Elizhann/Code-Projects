
total = 0
count = 0
    
while True:

    number = input('Enter a number:')

    if number == 'done':
         break

    else:
        try:
            number = int(number)
            total = total + number
            count = count + 1

        except ValueError:
            print('Invalid number')

average = total/count

print('Total:',total)
print('Count:', count)
print('Average:', average)

