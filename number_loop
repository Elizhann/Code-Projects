#this program asks the user to input a number
#until they input "done"
#then prints the maximum and minumum  numbers 

def main():
    #creates list to add numbers
    numbers_list = []

    #call loop function
    loop(numbers_list) 

#function for loop
def loop(numbers_list):   
    while True: #start loop
        number = input('Enter a number:')
        if number == 'done': #break loop if user inputs "done"
            break
        else:
            try:
                number = int(number) #convert to integer
                numbers_list.append(number)#add new number to list

            except ValueError:
                print('*Invalid number*')

    #when loop is done, call function to print results
    results(numbers_list) 

#function to print results
def results(numbers_list):
    minimum = min(numbers_list)
    maximum =  max(numbers_list)

    print('Max:', maximum)
    print('Min:', minimum)
    
main()
